{% if pagination.pages > 1 %}
  <nav
    role='navigation'
    class='my-8 flex items-center justify-center lg:justify-start'
    aria-label='Pagination'
  >
    <ul class='inline-flex items-center -space-x-px text-sm'>
      <!-- Previous Button -->
      <li>
        {% if pagination.previous %}
          <a
            href='{{ pagination.previous.url }}'
            class='ms-0 flex h-9 items-center justify-center rounded-s-lg border border-e-0 border-gray-300 bg-white px-3 leading-tight text-gray-500 hover:bg-gray-100 hover:text-gray-700'
          >
            {{ 'buttons.previous' | t }}
          </a>
        {% else %}
          <span
            class='ms-0 flex h-9 cursor-not-allowed items-center justify-center rounded-s-lg border border-e-0 border-gray-300 bg-gray-100 px-3 leading-tight text-gray-300'
          >
            {{ 'buttons.previous' | t }}
          </span>
        {% endif %}
      </li>

      <!-- Page Numbers -->
      {% for part in pagination.parts %}
        <li>
          {% if part.is_link %}
            <a
              href='{{ part.url }}'
              class='flex h-9 items-center justify-center border border-gray-300 bg-white px-3 leading-tight text-gray-500 hover:bg-gray-100 hover:text-gray-700'
            >
              {{ part.title }}
            </a>
          {% elsif part.title == pagination.current_page %}
            <span
              aria-current='page'
              class='flex h-9 items-center justify-center border border-gray-300 bg-orange-50 px-3 font-semibold text-orange-600 hover:bg-orange-100 hover:text-orange-700'
            >
              {{ part.title }}
            </span>
          {% else %}
            <span
              class='flex h-9 cursor-not-allowed items-center justify-center border border-gray-300 bg-white px-3 leading-tight text-gray-400'
            >
              {{ part.title }}
            </span>
          {% endif %}
        </li>
      {% endfor %}

      <!-- Next Button -->
      <li>
        {% if pagination.next %}
          <a
            href='{{ pagination.next.url }}'
            class='flex h-9 items-center justify-center rounded-e-lg border border-gray-300 bg-white px-3 leading-tight text-gray-500 hover:bg-gray-100 hover:text-gray-700'
          >
            {{ 'buttons.next' | t }}
          </a>
        {% else %}
          <span
            class='flex h-9 cursor-not-allowed items-center justify-center rounded-e-lg border border-gray-300 bg-gray-100 px-3 leading-tight text-gray-300'
          >
            {{ 'buttons.next' | t }}
          </span>
        {% endif %}
      </li>
    </ul>
  </nav>
{% endif %}
